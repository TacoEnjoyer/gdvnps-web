---
import { FooterLayout, FooterContent } from '../components/Footer';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scrollbar-hide">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta
      name="description"
      content="GDVNPS Là Geometry Dash Private Server dành cho cộng đồng Geometry Dash Việt Nam"
    />
    <meta property="og:title" content="GDVNPS" />
    <meta
      property="og:description"
      content="GDVNPS Là Geometry Dash Private Server dành cho cộng đồng Geometry Dash Việt Nam"
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="GDVNPS" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@gdvnps" />
    <meta name="color-scheme" content="dark" />
    <link rel="author" href="humans.txt" />
    <meta name="keywords" content="Geometry Dash, GDPS, GDPS 2.2, FHGDPS, GDPS Hub" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap.xml" />
  </head>
  <body class="scrollbar-hide">
    <div class="gradient-background">
      <main>
        <slot />
      </main>
      <FooterLayout>
        <FooterContent />
      </FooterLayout>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --gradient-1: #a78800;
    --gradient-2: #9e230d;
    --gradient-3: #918700;
    --gradient-4: #ff0000;
  }

  .gradient-background {
    width: 100%;
    min-height: 100vh;
    background: linear-gradient(
      -45deg,
      var(--gradient-1),
      var(--gradient-2),
      var(--gradient-3),
      var(--gradient-4)
    );
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  body {
    margin-bottom: auto;
    padding: 0;
    overflow-x: hidden;
  }
</style>
