---
import Layout from '../layouts/Layout.astro';
import NavbarLayout from '../components/Navbar/NavbarLayout.astro';
import DeviceInstructions from '../components/DeviceInstructions.vue';
---

<Layout title="Tải xuống GDVNPS">
  <NavbarLayout />

  <main class="flex flex-col items-center justify-center min-h-screen">
    <h1 class="text-5xl font-bold mt-20 gradient-text">Tải xuống GDVNPS</h1>

    <div class="mt-9 max-w-3xl w-full bg-white bg-opacity-10 rounded-lg p-8">
      <h2 class="text-2xl font-semibold text-white mb-4">Hướng dẫn cài đặt</h2>
      <DeviceInstructions client:load />
    </div>

    <a
      href="https://github.com/TacoEnjoyer/gdvnps/releases/latest"
      class="download-button items-center justify-center"
    >
      <i class="pi pi-github"></i>
      Tải xuống từ GitHub
    </a>

    <div class="mt-6 text-white text-center">
      <p>Phiên bản mới nhất: <span class="font-semibold">v1.0.4</span></p>
    </div>
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Pusab&display=swap');

  .gradient-text {
    font-family: 'Pusab', sans-serif;
    background: linear-gradient(-45deg, #ffd900, #ff2600, #ffee00, #ff0000);
    background-size: 300%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: gradient-text 10s ease infinite;
  }

  @keyframes gradient-text {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .download-button {
    display: inline-block;
    padding: 10px 20px;
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    color: #fff;
    background: linear-gradient(90deg, #ff9900, #ff4800);
    border-radius: 15px;
    transition: transform 0.3s ease;
  }

  .download-button:hover {
    transform: scale(1.05);
  }
</style>
